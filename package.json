{
  "name": "vscode-xsd-treeview",
  "displayName": "XSD Treeview",
  "publisher": "sh17ck",
  "description": "This VSCode extension provide a XML-schema tree view for elements.",
  "license": "MIT",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/sh17ck/vscode-xsd-treeview.git"
  },
  "bugs": {
    "url": "https://github.com/sh17ck/vscode-xsd-treeview/issues"
  },
  "engines": {
    "vscode": "^1.44.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:xml"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "xsdOutline",
          "name": "XSD Outline",
          "when": "xsdOutlineEnabled"
        }
      ]
    },
    "commands": [
      {
        "command": "xsdOutline.refresh",
        "title": "Refresh XSD Outline",
        "when": "xsdOutlineEnabled"
      },
      {
        "command": "xsdOutline.openSelection",
        "title": "Open XSD Selection"
      }
    ],
    "configuration": {
      "title": "XSD Outline",
      "properties": {
        "xsdOutline.autorefresh": {
          "type": "boolean",
          "default": true,
          "description": "Automatically refresh the outline when the document changes"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.44.0",
    "@types/xmldom": "^0.1.34",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.3",
    "eslint": "^9.25.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "xmldom": "^0.6.0",
    "xpath": "^0.0.34"
  }
}